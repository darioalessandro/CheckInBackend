# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.ClientAPI.monitorUI
GET     /monitorSocket              controllers.ClientAPI.monitorSocket
GET     /receiverSocket             controllers.ClientAPI.socket
GET     /javascriptRoutes           controllers.ClientAPI.javascriptRoutes

GET     /auth/login                 controllers.Auth.login
GET     /auth/callback              controllers.Auth.callback
GET     /auth/welcome               controllers.Auth.welcome

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
